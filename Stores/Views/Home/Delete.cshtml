@model Store
@{
    ViewData["Title"] = "Delete Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
        <div class="col-sm-12">
            <h3>Editar Store</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="DeleteStore"  method="post">
                <input type="hidden" asp-for="Id" />
                <div asp-validation-summary="ModelOnly" class="text-danger">

                </div>
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" disabled />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" disabled />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" disabled />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Lat" class="control-label"></label>
                    <input asp-for="Lat" class="form-control" disabled />
                    <span asp-validation-for="Lat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Long" class="control-label"></label>
                    <input asp-for="Long" class="form-control" disabled />
                    <span asp-validation-for="Lat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Eliminar Store" class="btn btn-primary" />
                </div>
            </form>
        </div>
 </div>

@section Scripts{
    @{
<partial name="_ValidationScriptsPartial" />}

}