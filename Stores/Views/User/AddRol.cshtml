@model CrearRolViewModels
@{
    ViewData["Title"] = "Add Rol";
}
<div class="row">
    <div class="col-sm-12">
        <h3>@ViewData["Title"]</h3>
    </div>
</div>
<div class="row">
    <div class="col-sm-10">
        <form asp-controller="User" asp-action="AddRol" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameRol" class="control-label"></label>
                <input asp-for="NameRol" class="form-control" />
                <span asp-validation-for="NameRol" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Store" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}