@model IEnumerable<UsuarioApliacion>
@inject UserManager<UsuarioApliacion> usermanager
@{
    ViewData["Title"] = "Users";
}

@if (TempData["mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show " role="alert">
        @TempData["mensaje"];
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}
<div class="row">
    <div class="col-sm-6">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn-info d-block" asp-action="AddUser" asp-controller="User">Add User</a>
    </div>
</div>
<div class="row">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered" table-striped>
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(m => m.Id)</td>
                    <td>@Html.DisplayNameFor(m => m.FirstName)</td>
                    <td>@Html.DisplayNameFor(m => m.LasttName)</td>
                    <td>@Html.DisplayNameFor(m => m.Email)</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.FirstName</td>
                        <td>@item.LasttName</td>
                        <td>@item.Email</td>
                    </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>No contiene registros</p>
    }
</div>